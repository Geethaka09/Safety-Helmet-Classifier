{"cells":[{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["from google.colab import drive\\n","drive.mount('/content/drive')\\n","\\n","\\n","import tensorflow as tf\\n","from tensorflow.keras.models import Sequential, load_model\\n","from tensorflow.keras.layers import Conv2D, MaxPooling2D, Flatten, Dense, Dropout\\n","from tensorflow.keras.preprocessing.image import ImageDataGenerator, load_img, img_to_array\\n","import numpy as np\\n","import matplotlib.pyplot as plt\\n","import os\\n","import seaborn as sns\\n","from sklearn.metrics import confusion_matrix, classification_report, accuracy_score, roc_curve, auc,precision_score, recall_score,f1_score\\n","from tensorflow.keras.callbacks import EarlyStopping, ReduceLROnPlateau # Import the callbacks # --- Step 2: Set the path to your dataset ---"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["dataset_path = '/content/drive/MyDrive/Safety_Hel' # --- Step 3: Image Preprocessing and Augmentation ---\\n","image_size = (224, 224)\\n","batch_size = 32\\n","\\n","# It will also split the data into training (80%) and validation (20%).\\n","datagen = ImageDataGenerator(\\n","    rescale=1./255,\\n","    validation_split=0.2, # splits the data into 80% training and 20% validation\\n","    rotation_range=15,\\n","    width_shift_range=0.1,\\n","    height_shift_range=0.1,\\n","    shear_range=0.1,\\n","    zoom_range=0.1,\\n","    horizontal_flip=True,\\n","    brightness_range=[0.8, 1.2],\\n","    fill_mode='nearest'\\n",")"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 4: Create Data Generators ---\\n","# Generator for training data\\n","train_generator = datagen.flow_from_directory(\\n","    dataset_path,\\n","    target_size=image_size,\\n","    batch_size=batch_size,\\n","    class_mode='binary', # Since we have two classes (yes/no)\\n","    subset='training' # Set as training data\\n",")\\n","# Generator for validation data\\n","val_generator = datagen.flow_from_directory(\\n","    dataset_path,\\n","    target_size=image_size,\\n","    batch_size=batch_size,\\n","    class_mode='binary',\\n","    subset='validation' # Set as validation data\\n",")\\n","# To confirm the class labels\\n","print('Class indices:', train_generator.class_indices)"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 5: Define the CNN Model ---\\n","model = Sequential([\\n","    Conv2D(32, (3, 3), activation='relu', input_shape=(224, 224, 3)),\\n","    MaxPooling2D(2, 2),\\n","    Conv2D(64, (3, 3), activation='relu'),\\n","    MaxPooling2D(2, 2),\\n","    Conv2D(128, (3, 3), activation='relu'),\\n","    MaxPooling2D(2, 2),\\n","    Flatten(),\\n","    Dense(256, activation='relu'),\\n","    Dropout(0.5),\\n","    Dense(1, activation='sigmoid') # Sigmoid for binary classification\\n","]")]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 6: Compile the Model ---\\n","model.compile(\\n","    optimizer='adam',\\n","    loss='binary_crossentropy',\\n","    metrics=['accuracy']\\n",")\\n","# Stop training early if the validation loss doesn't improve\\n","early_stopping = EarlyStopping(monitor='val_loss', patience=5, restore_best_weights=True)\\n","# Reduce the learning rate if validation loss plateaus\\n","reduce_lr = ReduceLROnPlateau(monitor='val_loss', factor=0.2, patience=3, min_lr=1e-6)"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 7: Train the Model ---\\n","history = model.fit(\\n","    train_generator,\\n","    validation_data=val_generator,\\n","    epochs=20, # You can adjust the number of epochs\\n","    callbacks=[early_stopping, reduce_lr]\\n",")"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 8: Save the Model ---\\n","# IMPORTANT: Update this path if you want to save the model elsewhere\\n","model_save_path = '/content/drive/MyDrive/Safety_Hel/helmet_classifier_model.keras'\\n","model.save(model_save_path)\\n","print(f'Model saved to {model_save_path}')"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 9: Plot Training & Validation Accuracy and Loss ---\\n","plt.plot(history.history['accuracy'], label='Train Accuracy')\\n","plt.plot(history.history['val_accuracy'], label='Validation Accuracy')\\n","plt.title('Model Accuracy')\\n","plt.xlabel('Epoch')\\n","plt.ylabel('Accuracy')\\n","plt.legend()\\n","plt.show()\\n","\\n","# Final losses\\n","train_loss = history.history['loss'][-1]\\n","val_loss = history.history['val_loss'][-1]\\n","print(f'Training Loss: {train_loss:.4f}')\\n","print(f'Validation Loss: {val_loss:.4f}')\\n","\\n","# Plot loss over epochs\\n","plt.plot(history.history['loss'], label='Train Loss')\\n","plt.plot(history.history['val_loss'], label='Validation Loss')\\n","plt.title('Model Loss')\\n","plt.xlabel('Epoch')\\n","plt.ylabel('Loss')\\n","plt.legend()\\n","plt.show()\\n","\\n","# Final accuracy\\n","train_acc = history.history['accuracy'][-1]\\n","val_acc = history.history['val_accuracy'][-1]\\n","print(f'Training Accuracy: {train_acc:.4f}')\\n","print(f'Validation Accuracy: {val_acc:.4f}')"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 10: Evaluate Model and Plot ROC Curve ---\\n","# Predict probabilities for the positive class using the validation generator\\n","y_pred_probs = model.predict(val_generator)\\n","# Get the true labels from the validation generator\\n","y_true = val_generator.classes\\n","# If binary classification, make sure predictions are 1D\\n","if y_pred_probs.shape[-1] == 1:\\n","    y_pred_probs = y_pred_probs.ravel()\\n","# Compute ROC curve and AUC\\n","fpr, tpr, thresholds = roc_curve(y_true, y_pred_probs)\\n","roc_auc = auc(fpr, tpr)\\n","# Convert probabilities to binary class labels (0 or 1) for other metrics\\n","y_pred = (y_pred_probs > 0.5).astype(int)\\n","# Evaluate and print test metrics\\n","# Note: Since we are using a generator, model.evaluate provides loss and accuracy.\\n","# We will calculate precision and recall manually using the predictions and true labels.\\n","test_loss, test_accuracy = model.evaluate(val_generator)\\n","test_precision = precision_score(y_true, y_pred)\\n","test_recall = recall_score(y_true, y_pred)\\n","print(f'\\nTest Accuracy: {test_accuracy:.4f}')\\n","print(f'Precision: {test_precision:.4f}')\\n","print(f'Recall: {test_recall:.4f}')\\n","print(f'AUC (computed manually): {roc_auc:.4f}')\\n","# Plot ROC curve\\n","plt.figure(figsize=(8, 6))\\n","plt.plot(fpr, tpr, color='blue', label=f'ROC curve (AUC = {roc_auc:.2f})')\\n","plt.plot([0, 1], [0, 1], color='gray', linestyle='--')\\n","plt.xlabel('False Positive Rate')\\n","plt.ylabel('True Positive Rate')\\n","plt.title('Receiver Operating Characteristic (ROC)')\\n","plt.legend(loc='lower right')\\n","plt.grid(True)\\n","plt.show()"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 11: Confusion Matrix and Classification Report ---\\n","# Get model predictions (as probabilities) using the validation generator\\n","y_pred_probs = model.predict(val_generator)\\n","# Convert probabilities to binary outputs (0 or 1)\\n","y_pred = (y_pred_probs >= 0.5).astype(int).flatten()\\n","# Get the true labels from the validation generator\\n","y_true = val_generator.classes\\n","# Get class labels from the generator\\n","class_labels = list(val_generator.class_indices.keys())\\n","# Print metrics\\n","print('\nConfusion Matrix:')\\n","cm = confusion_matrix(y_true, y_pred)\\n","plt.figure(figsize=(8, 6))\\n","sns.heatmap(cm, annot=True, fmt='d', cmap='Blues',\\n","            xticklabels=class_labels, yticklabels=class_labels)\\n","plt.title('Confusion Matrix')\\n","plt.ylabel('Actual Label')\\n","plt.xlabel('Predicted Label')\\n","plt.show()\\n","print('\nClassification Report:')\\n","print(classification_report(y_true, y_pred, target_names=class_labels))\\n","print('Accuracy:', accuracy_score(y_true, y_pred))\\n","print('Precision:', precision_score(y_true, y_pred))\\n","print('Recall:', recall_score(y_true, y_pred))\\n","print('F1 Score:', f1_score(y_true, y_pred))"]},{"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# --- Step 12: Predict on a Single Test Image ---\\n","# Path to your test image\\n","test_image_path = '/content/drive/MyDrive/Safety_Hel/No/PartB_00348.jpg'\\n","# This dictionary maps the model's output index (0 or 1) back to the class name ('No', 'Yes')\\n","try:\\n","    # It's created from the train_generator, which should be in memory from the training step\\n","    idx_to_label = {v: k for k, v in train_generator.class_indices.items()}\\n","except NameError:\\n","    print('Error: 'train_generator' is not defined.')\\n","    print('Please make sure you have run the main training code cell before this one.')\\n","    # As a fallback, you can define it manually if you know the mapping.\\n","    # This might need adjustment based on your specific dataset.\\n","    idx_to_label = None\\n","# Map original labels to more descriptive labels for display\\n","label_mapping = {\\n","    'Yes': 'With Helmet',\\n","    'No': 'Without Helmet'\\n","}\\n","# Proceed with prediction only if idx_to_label was created successfully\\n","if idx_to_label:\\n","    try:\\n","        # Load and preprocess the image for prediction\\n","        img_resized = load_img(test_image_path, target_size=image_size)\\n","        img_array = img_to_array(img_resized) / 255.0\\n","        img_array = np.expand_dims(img_array, axis=0)\\n","        # Predict\\n","        prediction = model.predict(img_array)\\n","        predicted_class_index = int(round(prediction[0][0]))\\n","        predicted_label = idx_to_label[predicted_class_index]\\n","        descriptive_label = label_mapping[predicted_label]\\n","        # Load original image for display\\n","        img_original = load_img(test_image_path)\\n","        # Show original image with prediction\\n","        plt.figure(figsize=(6, 6))\\n","        plt.imshow(img_original)\\n","        plt.title(f'Prediction: {descriptive_label}', fontsize=14)\\n","        plt.axis('off')\\n","        plt.show()\\n","    except FileNotFoundError:\\n","        print(f'Error: Test image not found at: {test_image_path}. Please update the path.')\\n","    except NameError as e:\\n","        print(f'A NameError occurred. This might mean the 'model' or 'image_size' is not defined.')\\n","        print('Please ensure the training cell has been run. Original error:', e)\\n","    except Exception as e:\\n","        print(f'An error occurred during prediction: {e}')\\n","]}